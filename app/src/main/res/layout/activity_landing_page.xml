<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPageActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/landingPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/mainTitleLanding"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#18314F"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/landingMoodBtn"
        android:layout_width="270dp"
        android:layout_height="130dp"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="91dp"
        android:background="@drawable/landing_button"
        android:fontFamily="@font/montserrat"
        android:onClick="openMoodPage"
        android:text="@string/landingMoodBtnText"
        android:textColor="#D6E3FC"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/landingResBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/landingPageTitle" />

    <Button
        android:id="@+id/landingResBtn"
        android:layout_width="270dp"
        android:layout_height="130dp"
        android:layout_marginBottom="111dp"
        android:background="@drawable/landing_button"
        android:fontFamily="@font/montserrat"
        android:onClick="openResultsPage"
        android:text="@string/landingResBtnText"
        android:textColor="#D6E3FC"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>