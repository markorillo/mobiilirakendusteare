<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsPageActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/resultsTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorPrimary"
        android:maxWidth="300dp"
        android:gravity="center_horizontal"
        android:textSize="36sp" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart"
        android:layout_width="297dp"
        android:layout_height="434dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resultsHomeBtn"
        android:layout_width="100dp"
        android:layout_height="51dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/button"
        android:fontFamily="@font/montserrat"
        android:onClick="openHomePage"
        android:text="@string/homeBtnText"
        android:textColor="@color/colorBtnText"
        android:autoSizeMinTextSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/resultsMoodBtn"
        android:layout_width="100dp"
        android:layout_height="51dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/button"
        android:fontFamily="@font/montserrat"
        android:onClick="openStatisticsPage"
        android:text="@string/moodsBtnText"
        android:textColor="@color/colorBtnText"
        android:autoSizeMinTextSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/buttonTempoBtn"
        android:layout_width="100dp"
        android:layout_height="51dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/button"
        android:fontFamily="@font/montserrat"
        android:onClick="openTempoPage"
        android:text="@string/temposBtnText"
        android:textColor="@color/colorBtnText"
        android:autoSizeMinTextSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/resultsMoodBtn"
        app:layout_constraintStart_toEndOf="@+id/resultsHomeBtn" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="267dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>